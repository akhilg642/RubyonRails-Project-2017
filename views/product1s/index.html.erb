<p id="notice"><%= notice %></p>

<h1>Product1s</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product1s.each do |product1| %>
      <tr>
        <td><%= product1.title %></td>
        <td><%= product1.description %></td>
        <td><%= product1.image_url %></td>
        <td><%= product1.price %></td>
        <td><%= link_to 'Show', product1 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product1', new_product1_path %>


<h1>Listing products</h1>
<table>
<% @product1s.each do |product1| %>
<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
<td>
<%= image_tag(product1.image_url, class: 'list_image') %>
</td>
<td class="list_description">
<dl>
<dt><%= product1.title %></dt>
<dd><%= truncate(strip_tags(product1.description),
length: 80) %></dd>
</dl>
</td>
<td class="list_actions">
<%= link_to 'Show', product1 %><br/>
<%= link_to 'Edit', edit_product1_path(product1) %><br/>
<%= link_to 'Destroy', product1,
confirm: 'Are you sure?',
method: :delete %>
</td>
</tr>
<% end %>
</table>
<br />
<%= link_to 'New product', new_product1_path %>